{{#content "hero-block"}}


<div class="columns is-mobile">
    <div class="column is-three-fifths is-offset-one-fifth" id='courses'>
        <div v-if="courses.length">
            <section class="section" v-for="course in courses" :key="course.id">
                <div class="card">
                    <header class="card-header">
                        <div class="card-header-title">
                            {% course.title %}
                        </div>
                    </header>
                    <div class="card-image">
                        <figure class="image is-6">
                            <img :src="course.imgUrl" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="content">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            Phasellus nec iaculis mauris. <a>@bulmaio</a>.
                            <a href="#">#css</a> <a href="#">#responsive</a>
                            <br>
                            <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                        </div>
                    </div>
                    <footer class="card-footer">

                        <form @submit.prevent="addToCart(course.id)" class="card-footer-item" method="POST">
                            <button class="button is-primary" type="submit">Add to cart!</button>
                        </form>

                        <a :href="'/courses/edit/'+ course.id" class="card-footer-item">Реактировать</a>

                        <form class="card-footer-item" @submit.prevent="deliteCourse(course.id)">
                            <button class="button is-danger" type="submit">Delite course</button>
                        </form>

                    </footer>
                </div>
            </section>
        </div>
        <div v-else>
            No added courses
        </div>
    </div>
</div>

{{/content}}

{{#content "scripts-block" mode='append'}}
<script src="/js/addCourseToCart.script.js"></script>
{{/content}}