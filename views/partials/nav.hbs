<div class="navbar   wrapper" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            <img class="logo" src="/img/logo.png">
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false"
            data-burger-menu="burger-menu">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="burger-menu" class="navbar-menu">
        <div class="navbar-start">

            {{#if isHome}}
            <a href="/" class="navbar-item is-active-nav">
                Home
            </a>
            {{else}}
            <a href="/" class="navbar-item">
                Home
            </a>
            {{/if}}

            {{#if isCourses}}
            <a href="/courses" class="navbar-item is-active-nav">
                Courses
            </a>
            {{else}}
            <a href="/courses" class="navbar-item">
                Courses
            </a>
            {{/if}}

            {{#if isAddCourse}}
            <a href="/add-course" class="navbar-item is-active-nav">
                Add Course
            </a>
            {{else}}
            <a href="/add-course" class="navbar-item">
                Add Course
            </a>
            {{/if}}

        </div>

        <div class="navbar-end" id="modal">
            <div class="navbar-item">
                <div class="buttons">
                    <a href="/cart" class="button is-rounded is-info is-small" @click.prevent="openModal('modal-cart')">
                        <span class="icon" aria-label="cart">
                            <i class="fas fa-shopping-cart"></i>
                        </span>
                    </a>
                </div>
            </div>

            <div class="navbar-item">
                <a class="button is-primary" @click="openModal('modal-sign-in')">
                    <strong>Sign up</strong>
                </a>
            </div>

            <div class="navbar-item">
                <a class="button is-light" @click="openModal('modal-login')">
                    Log in
                </a>
            </div>

            <div :class="{ 'is-active': isActive}" class="modal">
                <div class="modal-background" @click="isActive = false"></div>
                <component :is="selectedModal" v-on:closemodal="isActive=false" :initial="data"></component>
            </div>
        </div>
    </div>
</div>